<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/event_item_h">

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        >

        <com.privilist.component.widget.PrivilistTextView
            android:id="@+id/tv_box"
            style="@style/TextInBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_space"
            android:textAllCaps="true"
            android:textSize="@dimen/text_box_size"
            />

        <com.privilist.component.widget.PrivilistTextView
            android:id="@+id/tv_main"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_big_size"
            android:textAllCaps="true"
            style="@style/CommonText.Title"
            />

        <com.privilist.component.widget.PrivilistTextView
            android:id="@+id/tv_sub"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_half_white"
            android:textSize="14sp"
            style="@style/CommonText"
            />
    </LinearLayout>
</FrameLayout>