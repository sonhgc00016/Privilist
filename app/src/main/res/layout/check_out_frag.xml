<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/overlay"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/common_big_space"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.privilist.component.widget.PrivilistTextView
                style="@style/CommonText.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_space"
                android:text="@string/venue" />

            <com.privilist.component.widget.PrivilistTextView
                android:id="@+id/tv_venue_name"
                style="@style/CommonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.privilist.component.widget.PrivilistTextView
                style="@style/CommonText.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_space"
                android:text="@string/date" />

            <com.privilist.component.widget.PrivilistTextView
                android:id="@+id/tv_date"
                style="@style/CommonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.privilist.component.widget.PrivilistTextView
                style="@style/CommonText.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_space"
                android:text="@string/table" />

            <com.privilist.component.widget.PrivilistTextView
                android:id="@+id/tv_table_name"
                style="@style/CommonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.privilist.component.widget.PrivilistTextView
                style="@style/CommonText.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_space"
                android:text="@string/guests_limit" />

            <com.privilist.component.widget.PrivilistTextView
                android:id="@+id/tv_guest_limit"
                style="@style/CommonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.privilist.component.widget.PrivilistTextView
                style="@style/CommonText.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_space"
                android:text="@string/bottle_service" />

            <LinearLayout
                android:id="@+id/vg_bottles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/common_big_space"
                android:background="@color/color_white" />

            <com.privilist.component.widget.PrivilistTextView
                android:id="@+id/tv_total"
                style="@style/CommonText.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_space"
                android:layout_marginTop="@dimen/common_space"
                android:textColor="@color/color_white"
                android:textSize="@dimen/common_title_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_white" />

            <fragment
                android:id="@+id/frag_credit"
                android:name="com.privilist.frag.book.CreditCardFrag"
                class="com.privilist.frag.book.CreditCardFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_big_space" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCompleteBook"
        style="@style/BtnStyle.Btm"
        android:text="@string/complete_booking" />

</LinearLayout>